{
  "buildCommand": "pip install -r api/requirements.txt",
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python@3.8.17",
      "config": {
        "maxLambdaSize": "50mb",
        "requestsCacheSize": "max",
        "pythonVersion": "3.12"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api/index.py"
    }
  ],
  "env": {
    "ENVIRONMENT": "production",
    "DATABASE_URL": "sqlite:///:memory:"
  }
}
